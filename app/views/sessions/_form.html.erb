<%= form_for :session, url: login_path, remote: true, html: { class: 'form-horizontal' } do |f| %>

<div class="modal-header">
  <h3>Olar</h3>
</div>
<!-- /.modal-header -->

<div class="modal-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <% if @error %>
          <div id="error_explanation">
            <div class="alert alert-danger">
              <p><%= @error %></p>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label 'UsuÃ¡rio', class: 'control-label col-sm-2' %>
          <div class="col-sm-9">
            <%= f.text_field :user, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'Senha', class: 'control-label col-sm-2' %>
          <div class="col-sm-9">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-8 col-sm-offset-2">
            <div class="checkbox">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %>
                <span>Lembre-me neste computador</span>
              <% end %>
            </div>
          </div>
        </div>


      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.modal-body -->

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  <%= f.submit 'Entrar', class: "btn btn-primary" %>
</div>
<!-- /.modal-footer -->

<% end %>
