<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <%= sort_link @search, :nome, 'Nome', {}, { remote: true, method: :get } %>
      </th>
      <th>
        <%= sort_link @search, :marca, 'Marca', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-center">
        <%= sort_link @search, :un, 'Unidade', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-right">
        <%= sort_link @search, :preco_un, 'PreÃ§o', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-center w-5">
        <%= sort_link @search, :qtde, 'Qtde', {}, { remote: true, method: :get } %>
      </th>
      <th class="w-1"><br></th>
      <% if logged_in? %>
        <th class="w-5"><br></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |q| %>
      <tr>
        <td> <%= q.nome %> </td>
        <td> <%= q.marca %> </td>
        <td class="text-center"> <%= q.un %> </td>
        <td class="text-right"> <%= format_currency(q.preco_un) %> </td>
        <td class="text-center"> <%= q.qtde %> </td>
        <td class="text-right"> <%= qtde_badge(q) %> </td>

        <% if logged_in? %>
          <td class="text-right">
            <%= link_details_to '', edit_estoque_quimico_path(q, z: @z), remote: true %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
