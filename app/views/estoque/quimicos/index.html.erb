<% content_for :sidebar do %>
  <%= render 'estoque/sidebar' %>
<% end %>

<% provide(:url, estoque_quimicos_path) %>
<% provide(:search_field, :nome_or_marca_cont) %>
<% provide(:placeholder, 'Nome ou marca') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <%= fa_tag 'fa fa-align-justify' %>
        Estoque<strong>Químicos</strong>
      </div>

      <div class="card-block">
        <div class="row">
          <div class="col-sm-4">
            <%= render 'shared/search_form' %>
          </div>

          <% if logged_in? %>
            <div class="col-sm-8 text-right">
              <%= link_to 'Novo Químico',
                          new_estoque_quimico_path,
                          remote: true,
                          class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>

        <div id="qui-tableview">
          <%= render 'table' %>
        </div>
      </div>
    </div>
  </div>
</div>
