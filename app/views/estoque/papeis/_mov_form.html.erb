<%= form_for [:estoque, @papel], remote: true, html: { class: 'form-horizontal' } do |f| %>

<div class="modal-header">
  <h3>Movimento</h3>
</div>
<!-- /.modal-header -->

<div class="modal-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :tipo, class: 'control-label col-sm-3' %>
          <div class="col-sm-9">
            <label class="radio-inline">
              <%= radio_button_tag :mov, :entrada, checked: false %>Entrada
            </label>
            <label class="radio-inline">
              <%= radio_button_tag :mov, :saida, checked: true %>Sa√≠da
            </label>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :papel, class: 'control-label col-sm-3' %>
          <div class="col-sm-9">
            <p class="form-control-static"><%= @papel %></p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :quantidade, class: 'control-label col-sm-3' %>
          <div class="col-sm-3">
            <%= f.number_field :amount, value: 0, min: 0,class: 'form-control' %>
          </div>
        </div>

        <%= f.hidden_field :qtde, value: @papel.qtde %>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.modal-body -->

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  <%= f.submit "Salvar", class: "btn btn-primary" %>
</div>
<!-- /.modal-footer -->

<% end %>
