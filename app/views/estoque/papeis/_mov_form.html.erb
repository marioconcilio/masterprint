<%= form_for [:estoque, @papel], remote: true do |f| %>

  <div class="modal-header">
    <h4 class="modal-title">Movimento</h4>
    <%= button_tag type: :button, 'data-dismiss': :modal, 'aria-label': :close, class: 'close' do %>
      <span aria-hidden="true">×</span>
    <% end %>
  </div>
  <!-- /.modal-header -->

  <div class="modal-body">

          <div class="form-group">
            <%= f.label :tipo %>
            <div class="col-sm-9">
              <label class="radio-inline">
                <%= radio_button_tag :mov, :entrada, checked: false %>Entrada
              </label>
              <label class="radio-inline">
                <%= radio_button_tag :mov, :saida, checked: true %>Saída
              </label>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :papel %>
            <p class="form-control-static"><%= @papel %></p>
          </div>

          <div class="form-group">
            <%= f.label :quantidade %>
            <%= f.number_field :amount, value: 0, min: 0, class: 'form-control' %>
          </div>

          <%= f.hidden_field :qtde, value: @papel.qtde %>
  </div>
  <!-- /.modal-body -->

  <div class="modal-footer">
    <%= button_tag 'Cancelar', type: :button, 'data-dismiss': :modal, class: 'btn btn-secondary' %>
    <%= f.submit 'Salvar', class: 'btn btn-success' %>
  </div>
  <!-- /.modal-footer -->

<% end %>
