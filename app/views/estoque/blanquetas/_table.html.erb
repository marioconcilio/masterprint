<!-- pagination and filter btn-group -->
<div class="row">
  <div class="col-lg-6">
    <%= paginate @products, remote: true %>
  </div>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="w-20">
            <%= sort_link @search, :larg, [:larg, :comp], 'Tamanho', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :nome, 'Máquina', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-center">
            <%= sort_link @search, :blanqueta_lona_lonas, 'Lonas', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :preco_un, 'Preço Unidade', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-center w-5">
            <%= sort_link @search, :qtde, 'Qtde', {}, { remote: true, method: :get } %>
          </th>
          <th class="w-1"><br></th>
          <% if logged_in? %>
            <th class="w-5"><br></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |b| %>
          <tr>
            <td> <%= b.size %> </td>
            <td> <%= b.nome %> </td>
            <td class="text-center"> <%= b.blanqueta_lona.lonas %> lonas </td>
            <td class="text-right"> <%= format_currency(b.preco_un) %> </td>
            <td class="text-center"> <%= b.qtde %> </td>
            <td class="text-right"> <%= qtde_badge(b) %> </td>

            <% if logged_in? %>
              <td class="text-right">
                <%= link_details_to '', edit_estoque_blanqueta_path(b, z: @z), remote: true %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @products, remote: true %>
  </div>
</div>
