<% provide(:url, estoque_blanquetas_path) %>
<% provide(:search_field, @search_field) %>
<% provide(:placeholder, 'Nome ou tamanho') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <%= fa_tag 'fa fa-align-justify' %>
        Estoque<strong>Blanquetas</strong>
      </div>

      <div class="card-block">
        <div class="row">
          <div class="col-sm-4">
            <%= render 'shared/search_form' %>
          </div>

          <% if logged_in? %>
            <div class="col-sm-8 text-right">
              <%= link_to 'Nova Blanqueta',
                          new_estoque_blanqueta_path,
                          remote: true,
                          class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>

        <div id="blq-tableview">
          <%= render 'table' %>
        </div>
      </div>
    </div>
  </div>
</div>
