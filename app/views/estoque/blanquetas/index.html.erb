<% content_for :sidebar do %>
  <%= render 'estoque/sidebar' %>
<% end %>

<% provide(:url, estoque_blanquetas_path) %>
<% provide(:search_field, :nome_or_larg_or_comp_cont) %>
<% provide(:placeholder, 'Nome ou tamanho') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card card-accent-secondary">
      <div class="card-header">
        <strong>Blanquetas</strong>
        <div class="card-actions">
          <%= link_to '+',
                      new_estoque_blanqueta_path,
                      remote: true %>
        </div>
      </div>

      <div class="card-block">
        <div class="row">
          <div class="col-sm-4">
            <%= render 'shared/search_form' %>
          </div>
          <div class="col-sm-8 text-right">
            <%= link_to 'Adicionar Blanqueta',
                        new_estoque_blanqueta_path,
                        remote: true,
                        class: 'btn btn-primary' %>
          </div>
        </div>

        <div id="blq-tableview">
          <%= render 'table' %>
        </div>
      </div>
    </div>
  </div>
</div>
