<%= form_for [:estoque, @envelope], remote: true do |f| %>

  <div class="modal-header">
    <%= modal_form_header 'Novo', 'Envelope' %>
  </div>
  <!-- /.modal-header -->

  <div class="modal-body">
    <%= render 'shared/error_messages', object: f.object %>

    <div class="row">
      <div class="form-group col-sm-3 left-content">
        <%= f.label :tamanho %>
        <%= f.text_field :larg, class: 'form-control number-field' %>
      </div>

      <div class="form-group col-sm-1 center-content">
        <label><br></label>
        <p>x</p>
      </div>

      <div class="form-group col-sm-3 right-content">
        <label><br></label>
        <%= f.text_field :comp, class: 'form-control number-field' %>
      </div>

      <div class="form-group col-sm-5">
        <%= f.label :gramatura %>
        <%= f.text_field :grs, class: 'form-control number-field' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :nome %>
      <%= f.text_field :nome, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :tipo %>
      <%= f.text_field :tipo, class: 'form-control' %>
    </div>

    <div class="row">
      <div class="form-group col-sm-3">
        <%= f.label 'Preço' %>
        <%= f.collection_select :moeda,
                                moedas,
                                :value,
                                :text,
                                { include_blank: false },
                                { class: 'form-control' } %>
      </div>

      <div class="form-group col-sm-4">
        <label><br></label>
        <%= f.text_field :preco_milheiro, class: 'form-control money-field env-calculable' %>
      </div>

      <div class="form-group col-sm-5">
        <%= f.label 'Caixa c/' %>
        <%= f.text_field :un, class: 'form-control number-field env-calculable' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-sm-3">
        <%= f.label :quantidade %>
        <%= f.number_field :qtde, value: '0', min: 0,class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
       <%= f.label 'Preço Caixa' %>
       <p class="form-control-static" id="envelope_total">R$ 0,00</p>
    </div>

    <%= f.hidden_field :dolar, value: Settings.dolar.envelopes %>
  </div>
  <!-- /.modal-body -->

  <div class="modal-footer">
    <%= modal_form_save f %>
  </div>
  <!-- /.modal-footer -->

<% end %>
