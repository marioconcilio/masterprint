<%= form_for @envelope, remote: true, url: estoque_envelopes_path, html: { class: 'form-horizontal' } do |f| %>

<div class="modal-header">
  <h3>Olar</h3>
</div>
<!-- /.modal-header -->

<div class="modal-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :tamanho, class: 'control-label col-sm-2' %>
          <div class="col-sm-2">
            <%= f.text_field :larg, class: 'form-control' %>
          </div>
          <!--
          <div class="col-sm-1">
            <p class="form-control-static">x</p>
          </div>
          -->
          <div class="col-sm-2">
            <%= f.text_field :comp, class: 'form-control' %>
          </div>

          <%= f.label :gramatura, class: 'control-label col-sm-2' %>
          <div class="col-sm-3">
            <%= f.text_field :grs, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :nome, class: 'control-label col-sm-2' %>
          <div class="col-sm-10">
            <%= f.text_field :nome, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :tipo, class: 'control-label col-sm-2' %>
          <div class="col-sm-10">
            <%= f.text_field :tipo, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'Preço', class: 'control-label col-sm-2' %>
          <div class="col-sm-3">
            <%= f.collection_select :moeda,
                                    moedas,
                                    :value,
                                    :text,
                                    { include_blank: false },
                                    { class: 'form-control' } %>
          </div>
          <div class="col-sm-3" %>
            <%= f.text_field :preco_milheiro, class: 'form-control env-calculable' %>
          </div>

        </div>

        <div class="form-group">
          <%= f.label 'Caixa c/', class: 'control-label col-sm-2' %>
          <div class="col-sm-3">
            <%= f.text_field :un, class: 'form-control env-calculable' %>
          </div>

          <%= f.label 'Preço Caixa', class: 'control-label col-sm-3' %>
          <div class="col-sm-4">
            <p class="form-control-static" id="envelope_total">R$ 0,00</p>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :quantidade, class: 'control-label col-sm-2' %>
          <div class="col-sm-3">
            <%= f.number_field :qtde, value: '0', min: 0,class: 'form-control' %>
          </div>
        </div>

        <%= f.hidden_field :dolar, value: Settings.dolar.envelopes %>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.modal-body -->

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  <%= f.submit "Salvar", class: "btn btn-primary" %>
</div>
<!-- /.modal-footer -->

<% end %>
