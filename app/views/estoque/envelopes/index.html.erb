<% content_for :sidebar do %>
  <%= render 'estoque/sidebar' %>
<% end %>

<% provide(:url, estoque_envelopes_path) %>
<% provide(:new_url, new_estoque_envelope_path) %>
<% provide(:search_field, :nome_or_larg_or_comp_cont) %>
<% provide(:placeholder, 'Nome ou tamanho') %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Envelopes</h1>
      </div>
    </div>
  </div>

  <!-- search form -->
  <div class="row">
    <div class="col-lg-12">
      <%= render 'shared/search_form' %>
    </div>
  </div>

  <!-- table view -->
  <div class="row row-margin">
    <div class="col-lg-12">
      <div id="env-tableview"><%= render 'table' %></div>
    </div>
  </div>

</div>
