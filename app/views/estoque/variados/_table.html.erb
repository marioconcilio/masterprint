<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <%= sort_link @search, :nome, 'Nome', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-center">
        <%= sort_link @search, :un, 'Unidade', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-right">
        <%= sort_link @search, :preco_un, 'PreÃ§o', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-center w-5">
        <%= sort_link @search, :qtde, 'Qtde', {}, { remote: true, method: :get } %>
      </th>
      <th class="w-1"><br></th>
      <% if logged_in? %>
        <th class="w-5"><br></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |v| %>
      <tr>
        <td> <%= v.nome %> </td>
        <td class="text-center"> <%= v.un %> </td>
        <td class="text-right"> <%= format_currency(v.preco_un) %> </td>
        <td class="text-center"> <%= v.qtde %> </td>
        <td class="text-right"> <%= qtde_badge(v) %> </td>

        <% if logged_in? %>
          <td class="text-right">
            <%= link_details_to '', edit_estoque_variado_path(v), remote: true %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
