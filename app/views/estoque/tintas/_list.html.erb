<%= search_form_for @search, remote: true, url: estoque_tintas_path , method: :get do |f| %>

  <div class="form-inline pull-right">
    <%= f.search_field :nome_or_marca_cont, class: 'form-control'%>
    <div class="btn-group">
      <%= f.submit 'Pesquisar', name: nil, class: 'btn btn-primary' %>
      <%= link_to '', request.path, class: 'fa fa-times btn btn-danger' %>
    </div>
  </div>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>
          <%= sort_link @search, :nome, 'Cor', {}, { remote: true, method: :get } %>
        </th>
        <th>
          <%= sort_link @search, :marca, 'Marca', {}, { remote: true, method: :get } %>
        </th>
        <th>
          <%= sort_link @search, :un, 'Lata com', {}, { remote: true, method: :get } %>
        </th>
        <th class="text-right">
          <%= sort_link @search, :preco_un, 'Preço Lata', {}, { remote: true, method: :get } %>
        </th>
        <th class="text-right">
          <%= sort_link @search, :preco_kg, 'Preço Kg', {}, { remote: true, method: :get } %>
        </th>
        <th class="text-center">
          <%= sort_link @search, :qtde, 'Qtde', {}, { remote: true, method: :get } %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |t| %>
        <tr>
          <td> <%= t.nome %> </td>
          <td> <%= t.marca %> </td>
          <td> <%= t.un %>kg </td>
          <td class="text-right"> <%= format_currency(t.preco_un) %> </td>
          <td class="text-right"> <%= format_currency(t.preco_kg) %> </td>
          <td class="text-center"> <%= t.qtde %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
