<% content_for :sidebar do %>
  <%= render 'estoque/sidebar' %>
<% end %>

<% provide(:url, estoque_tintas_path) %>
<% provide(:search_field, :nome_or_marca_cont) %>
<% provide(:placeholder, 'Nome ou marca') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        Estoque<strong>Tintas</strong>
      </div>

      <div class="card-block">
        <div class="row">
          <div class="col-sm-4">
            <%= render 'shared/search_form' %>
          </div>
          <div class="col-sm-8 text-right">
            <%= link_to 'Nova Tinta',
                        new_estoque_tinta_path,
                        remote: true,
                        class: 'btn btn-success' %>
          </div>
        </div>

        <div id="tin-tableview">
          <%= render 'table' %>
        </div>
      </div>
    </div>
  </div>
</div>
