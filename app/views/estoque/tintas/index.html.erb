<% content_for :navbar do %>
  <%= render 'estoque/navbar' %>
<% end %>

<% provide(:url, estoque_tintas_path) %>
<% provide(:new_url, new_estoque_tinta_path) %>
<% provide(:search_field, :nome_or_marca_cont) %>
<% provide(:placeholder, 'Nome ou marca') %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Tintas</h1>
      </div>
    </div>
  </div>

  <!-- search form -->
  <div class="row">
    <div class="col-lg-12">
      <%= render 'shared/search_form' %>
    </div>
  </div>

  <!-- table view -->
  <div class="row row-margin">
    <div class="col-lg-12">
      <div id="tin-tableview"><%= render 'table' %></div>
    </div>
  </div>

</div>

<%= render "shared/modal" %>
