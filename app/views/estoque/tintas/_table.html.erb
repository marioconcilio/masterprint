<!-- pagination and filter btn-group -->
<div class="row">
  <div class="col-lg-6">
    <%= paginate @products, remote: true %>
  </div>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>
            <%= sort_link @search, :nome, 'Cor', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :marca, 'Marca', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-center">
            <%= sort_link @search, :un, 'Lata com', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :preco_un, 'Preço Lata', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :preco_kg, 'Preço Kg', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-center w-5">
            <%= sort_link @search, :qtde, 'Qtde', {}, { remote: true, method: :get } %>
          </th>
          <th class="w-1"><br></th>
          <% if logged_in? %>
            <th class="w-5"><br></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |t| %>
          <tr>
            <td> <%= t.nome %> </td>
            <td> <%= t.marca %> </td>
            <td class="text-center"> <%= format_decimal(t.un) %>kg </td>
            <td class="text-right"> <%= format_currency(t.preco_un) %> </td>
            <td class="text-right"> <%= format_currency(t.preco_kg, t.moeda) %> </td>
            <td class="text-center"> <%= t.qtde %> </td>
            <td class="text-right"> <%= qtde_badge(t) %> </td>

            <% if logged_in? %>
              <td class="text-right">
                <%= link_details_to '', edit_estoque_tinta_path(t, z: @z), remote: true %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @products, remote: true %>
  </div>
</div>
