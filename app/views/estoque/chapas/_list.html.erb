<%= search_form_for @search, remote: true, url: estoque_chapas_path , method: :get do |f| %>

  <div class="form-inline pull-right">
    <%= f.search_field :larg_or_comp_cont, class: 'form-control'%>
    <div class="btn-group">
      <%= f.submit 'Pesquisar', name: nil, class: 'btn btn-primary' %>
      <%= link_to '', request.path, class: 'fa fa-times btn btn-danger' %>
    </div>
  </div>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>
          <%= sort_link @search, :larg, [:larg, :comp], 'Tamanho', {}, { remote: true, method: :get } %>
        </th>
        <th>
          <%= sort_link @search, :chapa_marca_marca, 'Marca', {}, { remote: true, method: :get } %>
        </th>
        <th class="text-right">
          <%= sort_link @search, :preco_un, 'Preço Unidade', {}, { remote: true, method: :get } %>
        </th>
        <th class="text-right">
          <%= sort_link @search, :preco_un, 'Preço Avulso', {}, { remote: true, method: :get } %>
        </th>
        <th class="text-center">
          <%= sort_link @search, :qtde, 'Qtde', {}, { remote: true, method: :get } %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |c| %>
        <tr>
          <td> <%= c.size %> </td>
          <td> <%= c.chapa_marca.marca %> </td>
          <td class="text-right"> <%= format_currency(c.preco) %> </td>
          <td class="text-right"> <%= format_currency(c.preco_avulso) %> </td>
          <td class="text-center"> <%= c.qtde %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
