<% content_for :navbar do %>
  <%= render 'estoque/navbar' %>
<% end %>

<% provide(:url, estoque_chapas_path) %>
<% provide(:new_url, new_estoque_chapa_path) %>
<% provide(:search_field, :larg_or_comp_cont) %>
<% provide(:placeholder, 'Tamanho') %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Chapas</h1>
      </div>
    </div>
  </div>

  <!-- search form -->
  <div class="row">
    <div class="col-lg-12">
      <%= render 'shared/search_form' %>
    </div>
  </div>

  <!-- table view -->
  <div class="row row-margin">
    <div class="col-lg-12">
      <div id="chp-tableview"><%= render 'table' %></div>
    </div>
  </div>

</div>

<%= render "shared/modal" %>
