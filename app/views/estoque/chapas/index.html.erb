<% content_for :sidebar do %>
  <%= render 'estoque/sidebar' %>
<% end %>

<% provide(:url, estoque_chapas_path) %>
<% provide(:search_field, :larg_or_comp_cont) %>
<% provide(:placeholder, 'Tamanho') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <%= fa_tag 'fa fa-align-justify' %>
        Estoque<strong>Chapas</strong>
      </div>

      <div class="card-block">
        <div class="row">
          <div class="col-sm-4">
            <%= render 'shared/search_form' %>
          </div>
          <div class="col-sm-8 text-right">
            <%= link_to 'Nova Chapa',
                        new_estoque_chapa_path,
                        remote: true,
                        class: 'btn btn-success' %>
          </div>
        </div>

        <div id="chp-tableview">
          <%= render 'table' %>
        </div>
      </div>
    </div>
  </div>
</div>
