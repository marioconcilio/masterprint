<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>Formulário contém <%= object.errors.count %> <%= 'erro'.pluralize(object.errors.count) %>.</p>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if @error_message %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p><%= @error_message %>.</p>
    </div>
  </div>
<% end %>
