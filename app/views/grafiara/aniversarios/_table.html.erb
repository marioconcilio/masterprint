<!-- pagination -->
<div class="row">
  <div class="col-lg-6">
    <%= paginate @aniversarios, remote: true %>
  </div>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="w-20">
            <%= sort_link @search, :pagina, 'Página', {}, { remote: true, method: :get } %>
          </th>
          <th class="w-40">
            <%= sort_link @search, :codigo, 'Código', {}, { remote: true, method: :get } %>
          </th>
          <th class="w-20 text-right">
            <%= sort_link @search, :preco, 'Preço', {}, { remote: true, method: :get } %>
          </th>
          <th class="w-10 text-center">
            <%= sort_link @search, :un, 'Unidade', {}, { remote: true, method: :get } %>
          </th>
          <% if @logged_in %>
            <th><br></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @aniversarios.each do |a| %>
          <tr>
            <td> <%= a.pagina %> </td>
            <td> <%= a.codigo %> </td>
            <td class="text-right"> <%= format_currency a.preco %> </td>
            <td class="text-center"> <%= a.un %> </td>
            <% if @logged_in %>
              <td class="text-right">
                <%= link_details_to '', edit_grafiara_aniversario_path(a), remote: true %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- pagination -->
<div class="row">
  <div class="col-lg-6">
    <%= paginate @aniversarios, remote: true %>
  </div>
</div>
<!-- /.row -->
