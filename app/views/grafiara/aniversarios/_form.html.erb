<%= form_for @aniversario, remote: true do |f| %>

  <div class="modal-header">
    <%= modal_form_header 'Novo', 'Convite Aniversário' %>
  </div>
  <!-- /.modal-header -->

  <div class="modal-body">
    <%= render 'shared/error_messages', object: f.object %>

    <!-- pagina -->
    <div class="form-group">
      <%= form_label 'Página' %>
      <%= f.text_field :pagina, class: 'form-control' %>
    </div>

    <!-- codigo -->
    <div class="form-group">
      <%= form_label 'Código' %>
      <%= f.text_field :codigo, class: 'form-control' %>
    </div>

    <!-- preco e un -->
    <div class="row">
      <div class="form-group col-sm-6">
        <%= form_label 'Preço' %>
        <%= f.money_field :preco, class: 'form-control' %>
      </div>

      <div class="form-group col-sm-6">
        <%= form_label :unidade %>
        <%= f.text_field :un, class: 'form-control' %>
      </div>
    </div>

  </div>
  <!-- /.modal-body -->

  <div class="modal-footer">
    <%= modal_form_save f %>
  </div>
  <!-- /.modal-footer -->

<% end %>
