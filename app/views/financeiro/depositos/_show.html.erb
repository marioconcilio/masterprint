<div class="modal-header">
  <h3>Olar</h3>
</div>
<!-- /.modal-header -->

<div class="modal-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <div class="well">
          <legend>Dados</legend>
            <%= form_for [:financeiro, @deposito], remote: true do |f| %>
              <% if @deposito.banco %>
                <!-- deposito -->
                <div class="form-group">
                  <%= f.label :titular_da_conta %>
                  <%= content_tag :p, @deposito.titular, class: 'form-control-static' %>
                </div>

                <div class="form-group row">
                  <div class="col-sm-2">
                    <%= f.label :banco %>
                    <%= content_tag :p, format_banco(@deposito.banco), class: 'form-control-static' %>
                  </div>

                  <div class="col-sm-3">
                    <%= f.label 'Agência' %>
                    <%= content_tag :p, @deposito.agencia, class: 'form-control-static' %>
                  </div>

                  <div class="col-sm-3">
                    <%= f.label :conta %>
                    <%= content_tag :p, @deposito.conta, class: 'form-control-static' %>
                  </div>

                  <div class="col-sm-4">
                    <%= f.label :total %>
                    <%= content_tag :p, format_currency(@deposito.total), class: 'form-control-static' %>
                  </div>
                </div>
              <!-- /deposito -->
              <% else %>
                <!-- repasse -->
                <div class="form-group">
                  <%= f.label :para %>
                  <%= content_tag :p, @deposito.titular, class: 'form-control-static' %>
                </div>

                <div class="form-group">
                  <%= f.label :total %>
                  <%= content_tag :p, format_currency(@deposito.total), class: 'form-control-static' %>
                </div>
              <% end %>
              <!-- /repasse -->
            <% end %>
            <!-- /form @deposito -->

            <legend>Cheques</legend>
            <div class="row row-margin">
              <div class="col-lg-12">
                <table class="table table-hover table-striped">
                  <thead>
                    <tr>
                      <th>Banco</th>
                      <th>Número</th>
                      <th>Emitente</th>
                      <th class="text-right">Valor</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @cheques.each do |c| %>
                      <tr>
                        <td><%= format_banco(c.banco) %></td>
                        <td><%= format_numero(c.numero) %></td>
                        <td><%= c.emitente %></td>
                        <td class="text-right"><%= format_currency(c.valor) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

        </div>
        <!-- /.well -->

      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.modal-body -->

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
</div>
<!-- /.modal-footer -->
