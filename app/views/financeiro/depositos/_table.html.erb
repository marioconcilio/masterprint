<!-- pagination and filter btn-group -->
<div class="row">
  <div class="col-lg-6">
    <%= paginate @depositos, remote: true %>
  </div>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>
            <%= sort_link @search, :titular, 'Titular', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :banco, 'Banco', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :agencia, 'AgÃªncia', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :conta, 'Conta', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-center">
            <%= sort_link @search, :created_at, 'Realizado Em', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :total, 'Total', {}, { remote: true, method: :get } %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @depositos.each do |d| %>
          <tr>
            <td> <%= d.titular %> </td>
            <td> <%= d.banco %> </td>
            <td> <%= d.agencia %> </td>
            <td> <%= d.conta %> </td>
            <td class="text-center"> <%= format_date(d.created_at) %> </td>
            <td class="text-right"> <%= format_currency(d.total) %> </td>
            <td class="text-right">
              <%= link_details_to '', financeiro_deposito_path(d), remote: true %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @depositos, remote: true %>
  </div>
</div>
