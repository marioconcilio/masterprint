<% content_for :navbar do %>
  <%= render 'financeiro/navbar' %>
<% end %>

<% provide(:url, financeiro_depositos_path) %>
<% provide(:new_url, new_financeiro_deposito_path) %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Depósitos</h1>
      </div>
    </div>
  </div>

  <!-- search form -->
  <div class="row">
    <div class="col-lg-12">
      <div class="form-inline">
        <div class="form-group">
          <%= search_form_for @search, remote: true, url: yield(:url), method: :get do |f| %>
            <div class="input-group">
              <%= f.search_field :titular_cont, placeholder: 'Titular', class: 'form-control'%>

              <div class="input-group-btn">
                <%= f.button '', class: 'btn btn-primary' do %>
                  <i class="fa fa-search"></i>
                <% end %>
                <%= link_to '', request.path, class: 'fa fa-times btn btn-danger' %>
              </div>
              <!-- /.input-group-btn -->
            </div>
            <!-- /.input-group -->
          <% end %>
        </div>
        <!-- /.form-group -->

        <div class="form-group pull-right">
          <%= link_to 'Novo Depósito',
                      yield(:new_url),
                      class: 'btn btn-info' %>
        </div>
        <!-- /.form-group .pull-right -->

      </div>
      <!-- /.form-inline -->
    </div>
  </div>

  <!-- table view -->
  <div class="row row-margin">
    <div class="col-lg-12">
      <div id="dpo-tableview"><%= render 'table' %></div>
    </div>
  </div>

</div>
