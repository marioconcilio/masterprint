<%= form_for [:financeiro, @cheque], remote: true, html: { class: 'form-horizontal' } do |f| %>

<div class="modal-header">
  <h3>Olar</h3>
</div>
<!-- /.modal-header -->

<div class="modal-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

      <div class="well">
        <div class="form-group">
          <%= f.label :banco, class: 'control-label col-sm-2' %>
          <div class="col-sm-3">
            <%= content_tag :p, @cheque.banco, class: 'form-control-static' %>
          </div>

          <%= label_tag 'Número', nil, class: 'control-label col-sm-2' %>
          <div class="col-sm-5">
            <%= content_tag :p, format_numero(@cheque.numero), class: 'form-control-static' %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :emitente, nil, class: 'control-label col-sm-2' %>
          <div class="col-sm-10">
            <%= content_tag :p, @cheque.emitente, class: 'form-control-static' %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :valor, nil, class: 'control-label col-sm-2' %>
          <div class="col-sm-3">
            <%= content_tag :p, format_currency(@cheque.valor), class: 'form-control-static' %>
          </div>

          <%= label_tag :data, nil, class: 'control-label col-sm-2' %>
          <div class="col-sm-5">
            <%= content_tag :p, format_date(@cheque.data_deposito), class: 'form-control-static' %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :cliente, nil, class: 'control-label col-sm-2' %>
          <div class="col-sm-10">
            <%= content_tag :p, @cheque.cliente, class: 'form-control-static' %>
          </div>
        </div>


        <% if @deposito %>
          <legend>Dados do depósito</legend>
          <%= @deposito %>
        <% end %>
        </div>

      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.modal-body -->

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>

</div>
<!-- /.modal-footer -->

<% end %>
