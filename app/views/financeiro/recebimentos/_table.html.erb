<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>
        <%= sort_link @search, :id, 'Número', {}, { remote: true, method: :get } %>
      </th>
      <th>
        <%= sort_link @search, :cliente_nome, 'Cliente', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-center">
        <%= sort_link @search, :vencimento, 'Vencimento', {}, { remote: true, method: :get } %>
      </th>
      <th class="text-center">
        <%= sort_link @search, :status, 'Situação', {}, { remote: true, method: :get } %>
      </th>
      <th>
        <%= sort_link @search, :cep, 'CEP', {}, { remote: true, method: :get } %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |b| %>
      <tr data-href="<%= financeiro_recebimento_path(b) %>" class="<%= row_status(b) %>">
        <td> <%= format_id(b.id) %> </td>
        <td> <%= b.cliente.nome %> </td>
        <td class="text-center"> <%= format_date(b.vencimento) %> </td>
        <td class="text-center"> <%= b.status %> </td>
        <td> <%= link_to '', financeiro_recebimento_path(b), class: 'fa fa-info-circle fa-lg no-underline' %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-lg-8">
    <%= paginate @bills %>
  </div>
</div>
