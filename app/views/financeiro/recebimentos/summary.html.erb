<div class="row">
  <div class="col-lg-12">
    <div class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-12">
            <h3 class="card-title clearfix mb-4">Resumo da Operação</h3>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Número</th>
                  <th>Cliente</th>
                  <th class="text-center">Vencimento</th>
                  <th class="text-right">Valor</th>
                  <th class="text-center">Situação</th>
                </tr>
              </thead>
              <tbody>
                <% @bills.each do |b| %>
                  <tr>
                    <td><%= format_bill_number(b.id) %></td>
                    <td>
                      <%= b.cliente.razao_social %>
                      <br>
                      <small class="text-muted text-uppercase font-weight-bold pull-right">
                        <%= get_ocorrencia(b.id) %>
                      </small>
                    </td>
                    <td class="text-center"><%= format_date(b.vencimento) %></td>
                    <td class="text-right"><%= format_currency(b.valor) %></td>
                    <td class="text-center">
                      <span class="<%= bill_label b %>"><%= Recebimento.status[b.status] %></span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

      </div>
    </div>
  </div>
</div>
