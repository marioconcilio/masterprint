<% content_for :sidebar do %>
  <%= render 'financeiro/sidebar' %>
<% end %>

<% provide(:url, financeiro_recebimentos_path) %>
<% provide(:search_field, :numero_or_cliente_nome_cont) %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Contas a Receber</h1>
      </div>
    </div>
  </div>

  <!-- search form -->
  <div class="row">
    <div class="col-lg-12">
      <div class="form-inline">
        <div class="form-group">
          <%= search_form_for @search, remote: true, url: yield(:url), method: :get do |f| %>
            <div class="input-group">
              <%= f.search_field yield(:search_field), placeholder: 'NÃºmero ou cliente', class: 'form-control'%>

              <div class="input-group-btn">
                <%= f.button '', class: 'btn btn-primary' do %>
                  <i class="fa fa-search"></i>
                <% end %>
                <%= link_to '', request.path, class: 'fa fa-times btn btn-danger' %>
              </div>
              <!-- /.input-group-btn -->
            </div>
            <!-- /.input-group -->
          <% end %>
        </div>
        <!-- /.form-group -->

        <div class="form-group pull-right">
          <div class="btn-group">
            <%= link_to 'Remessa',
                        remessa_financeiro_recebimentos_path,
                        remote: true,
                        class: 'btn btn-info' %>

            <%= link_to 'Retorno',
                        retorno_financeiro_recebimentos_path,
                        remote: true,
                        class: 'btn btn-info' %>
          </div>
        </div>
        <!-- /.form-group .pull-right -->

      </div>
      <!-- /.form-inline -->
    </div>
  </div>

  <!-- table view -->
  <div class="row">
    <div class="col-lg-12">
      <div id="rcb-tableview"><%= render 'table' %></div>
    </div>
  </div>

</div>
