<% provide(:url, financeiro_recebimentos_path) %>
<% provide(:search_field, @search_field) %>
<% provide(:placeholder, 'NÃºmero ou cliente') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <%= fa_tag 'fa fa-align-justify' %>
        Financeiro<strong>A Receber</strong>
      </div>

      <div class="card-block">
        <div class="row">
          <div class="col-sm-4">
            <%= render 'shared/search_form' %>
          </div>

          <% if admin? %>
            <div class="col-sm-8 text-right">
              <div class="btn-group">
                <%= link_to 'Remessa',
                            remessa_financeiro_recebimentos_path,
                            remote: true,
                            class: 'btn btn-info' %>

                <%= link_to 'Retorno',
                            retorno_financeiro_recebimentos_path,
                            remote: true,
                            class: 'btn btn-info' %>
              </div>
            </div>
          <% end %>
        </div>

        <div id="rcb-tableview">
          <%= render 'table' %>
        </div>
      </div>
    </div>
  </div>
</div>
