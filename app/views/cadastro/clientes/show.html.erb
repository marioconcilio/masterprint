<% content_for :sidebar do %>
  <%= render 'cadastro/sidebar' %>
<% end %>

<% provide(:url, cadastro_cliente_path) %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <ul class="nav nav-pills pull-right">
          <li class="<%= active_tab? 'dados' %>">
            <%= link_to 'Dados', '#dados', 'data-toggle' => 'tab' %>
          </li>
            <% if @bills.empty? %>
              <li class="disabled">
              <%= link_to 'A Receber', '#receber' %>
            <% else %>
              <li class="<%= active_tab? 'receber' %>">
              <%= link_to 'A Receber', '#receber', 'data-toggle' => 'tab' %>
            <% end %>
          </li>
        </ul>
        <h1><%= @cliente.nome %></h1>
      </div>
    </div>
  </div>

  <!-- content -->
  <div class="tab-content">
    <div class="<%= active_tabpane? 'dados' %>" id="dados">
      <%= render 'dados' %>
    </div>
    <div class="<%= active_tabpane? 'receber' %>" id="receber">
      <div id="receber-tableview">
        <%= render 'financeiro/recebimentos/table' %>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->
