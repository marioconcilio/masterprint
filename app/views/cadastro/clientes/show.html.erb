<% provide(:url, cadastro_cliente_path) %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Detalhes do Cliente</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="well">
        <legend>Dados</legend>
        <table class="table">
          <tbody>
            <tr>
              <td>Nome</td>
              <td><%= @cliente.nome %></td>
            </tr>
            <tr>
              <td>CNPJ</td>
              <td><%= format_cnpj(@cliente.id) %></td>
            </tr>
            <tr>
              <td>Endere√ßo</td>
              <td><%= @cliente.endereco %></td>
            </tr>
            <tr>
              <td>Cidade</td>
              <td><%= @cliente.cidade %> - <%= @cliente.uf %></td>
            </tr>
            <tr>
              <td>CEP</td>
              <td><%= format_cep(@cliente.cep) %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= @cliente.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="btn-group">
        <%= link_to 'Voltar', cadastro_clientes_path,
                    class: 'btn btn-default' %>
        <%= link_to 'Editar',
                    edit_cadastro_cliente_path(@cliente),
                    method: :get,
                    remote: true,
                    class: 'btn btn-primary' %>
        <%= link_to 'Remover',
                    cadastro_cliente_path(@cliente),
                    method: :delete,
                    data: { confirm: 'Deseja remover o cliente?' },
                    class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <!-- /.row -->

</div>
<!-- /.container-fluid -->

<%= render "shared/modal" %>
