<% content_for :navbar do %>
  <%= render 'cadastro/navbar' %>
<% end %>

<% provide(:url, cadastro_cliente_path) %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <ul class="nav nav-pills pull-right">
          <li class="<%= 'active' if params[:tab] == 'tab1' %>">
            <a href="#tab1" data-toggle="tab">Dados</a>
          </li>
          <li class="<%= 'active' if params[:tab] == 'tab9' %>">
            <a href="#tab9" data-toggle="tab">A Receber</a>
          </li>
        </ul>
        <h1><%= @cliente.nome %></h1>
      </div>
    </div>
  </div>



    <div class="tab-content">
      <div class="<%= if (params[:tab] == 'tab1' || !params[:tab])then 'tab-pane active fade'  else 'tab-pane fade' end%>" id="tab1">
        <%= render 'dados' %>
      </div>
      <div class="<%= if params[:tab] == 'tab9' then 'tab-pane active fade'  else 'tab-pane fade' end%>" id="tab9">
        <div id="receber-tableview"><%= render 'receber' %></div>
      </div>
    </div>


  <div class="row">
    <div class="col-lg-6">
      <div class="well">
        <legend>Dados</legend>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= label_tag :aberto %></td>
              <td><%= format_currency @aberto %></td>
            </tr>
            <tr>
              <td><%= label_tag :vencido %></td>
              <td><%= format_currency @vencido %></td>
            </tr>
            <tr>
              <td><%= label_tag 'Em cartÃ³rio' %></td>
              <td class="text-primary"><%= format_currency @cartorio %></td>
            </tr>
            <tr>
              <td><%= label_tag :protestado %></td>
              <td class="text-danger"><%= format_currency @protesto %></td>
            </tr>
            <tr style="font-size: 18px">
              <td colspan=2><br></td>
            </tr>
            <tr style="font-size: 18px">
              <td colspan=2><br></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <!-- /.col-lg-6 -->
  </div>
  <!-- row -->

  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-lg-6">
      <div class="btn-group">
        <%= link_to 'Voltar', cadastro_clientes_path,
                    class: 'btn btn-default' %>
        <%= link_to 'Editar',
                    edit_cadastro_cliente_path(@cliente),
                    method: :get,
                    remote: true,
                    class: 'btn btn-primary' %>
        <%= link_to 'Remover',
                    cadastro_cliente_path(@cliente),
                    method: :delete,
                    data: { confirm: 'Deseja remover o cliente?' },
                    class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <!-- /.row -->

  <% unless @bills.empty? %>
    <hr>
    <div class="row">
      <div class="col-lg-12">
        <h3>A Receber</h3>
      </div>
    </div>

    <!-- table view -->
    <div class="row">
      <div class="col-lg-12">
        <div id="cli-tableview-bills"><%= render 'table_bills' %></div>
      </div>
    </div>
  <% end %>

</div>
<!-- /.container-fluid -->

<%= render 'shared/modal' %>
