<!-- pagination -->
<div class="row">
  <div class="col-lg-6">
    <%= paginate @clientes, remote: true %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>
            <%= sort_link @search, :nome, 'Nome', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :razao_social, 'RazÃ£o Social', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :contato, 'Contato', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :telefone, 'Telefone', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :celular, 'Celular', {}, { remote: true, method: :get } %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @clientes.each do |c| %>
          <tr>
            <td> <%= c.nome %> </td>
            <td> <%= c.razao_social %> </td>
            <td> <%= c.contato %> </td>
            <td class="text-right"> <%= c.telefone %> </td>
            <td class="text-right"> <%= c.celular %> </td>
            <td> <%= link_to '',
                             cadastro_cliente_path(c),
                             class: 'fa fa-lg fa-plus-circle no-underline' %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @clientes, remote: true %>
  </div>
</div>
