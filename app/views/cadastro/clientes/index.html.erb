<% provide(:url, cadastro_clientes_path) %>
<% provide(:new_url, new_cadastro_cliente_path) %>
<% provide(:search_field, :nome_cont) %>
<% provide(:placeholder, 'Nome') %>

<div class="container-fluid">

  <!-- header -->
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1><%= controller_name.classify.pluralize %></h1>
      </div>
    </div>
  </div>

  <!-- search form -->
  <div class="row">
    <div class="col-lg-12">
      <%= render 'shared/search_form' %>
    </div>
  </div>

  <!-- table view -->
  <div class="row row-margin">
    <div class="col-lg-12">
      <div id="tableview"><%= render 'table' %></div>
    </div>
  </div>

</div>

<%= render "shared/modal" %>
