<%= search_form_for @search, remote: true, url: cadastro_clientes_path , method: :get do |f| %>

  <div class="form-inline pull-right">
    <%= f.search_field :nome_cont, class: 'form-control'%>
    <div class="btn-group">
      <%= f.submit 'Pesquisar', name: nil, class: 'btn btn-primary' %>
      <%= link_to '', request.path, class: 'fa fa-times btn btn-danger' %>
    </div>
  </div>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>
          <%= sort_link @search, :id, 'CNPJ', {}, { remote: true, method: :get } %>
        </th>
        <th>
          <%= sort_link @search, :nome, 'Nome', {}, { remote: true, method: :get } %>
        </th>
        <th>
          <%= sort_link @search, :un, 'EndereÃ§o', {}, { remote: true, method: :get } %>
        </th>
        <th>
          <%= sort_link @search, :preco_un, 'Cidade', {}, { remote: true, method: :get } %>
        </th>
        <th class="text-center">
          <%= sort_link @search, :preco_kg, 'UF', {}, { remote: true, method: :get } %>
        </th>
        <th>
          <%= sort_link @search, :qtde, 'CEP', {}, { remote: true, method: :get } %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @clientes.each do |c| %>
        <tr>
          <td> <%= format_cnpj(c.id) %> </td>
          <td> <%= c.nome %> </td>
          <td> <%= c.endereco %> </td>
          <td> <%= c.cidade %> </td>
          <td class="text-center"> <%= c.uf %> </td>
          <td> <%= format_cep(c.cep) %> </td>
          <td> <%= link_to 'Detalhes', cadastro_cliente_path(c), remote: true %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @clientes %>
<% end %>

<%= render "layouts/modal" %>
