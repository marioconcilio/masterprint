<!-- pagination -->
<div class="row">
  <div class="col-lg-6">
    <%= paginate @fornecedores, remote: true %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>
            <%= sort_link @search, :nome, 'Nome', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :razao_social, 'RazÃ£o Social', {}, { remote: true, method: :get } %>
          </th>
          <th>
            <%= sort_link @search, :contato, 'Contato', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :telefone, 'Telefone', {}, { remote: true, method: :get } %>
          </th>
          <th class="text-right">
            <%= sort_link @search, :celular, 'Celular', {}, { remote: true, method: :get } %>
          </th>
          <th><br></th>
        </tr>
      </thead>
      <tbody>
        <% @fornecedores.each do |f| %>
          <tr>
            <td> <%= f.nome %> </td>
            <td> <%= f.razao_social %> </td>
            <td> <%= f.contato %> </td>
            <td class="text-right"> <%= f.telefone %> </td>
            <td class="text-right"> <%= f.celular %> </td>
            <td class="text-right"> <%= link_details_to '', cadastro_cliente_path(f) %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @fornecedores, remote: true %>
  </div>
</div>
